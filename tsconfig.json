{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "lib": ["ESNext", "DOM"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "types": ["bun-types", "typed-html", "typed-htmx"],
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "$auth": ["src/auth"],
      "$alpine": ["src/script/alpine"],
      "$alpine/*": ["src/script/alpine/*"],
      "$config": ["src/config"],
      "$components": ["src/components"],
      "$components/*": ["src/components/*"],
      "$db": ["src/db"],
      "$db/*": ["src/db/*"],
      "$middlewares": ["src/middlewares"],
      "$middlewares/*": ["src/middlewares/*"],
      "$controllers": ["src/controllers"],
      "$controllers/*": ["src/controllers/*"],
      "$services": ["src/services"],
      "$services/*": ["src/services/*"],
      "$pages": ["src/pages"],
      "$pages/*": ["src/pages/*"],
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"]
    }
  },
  "exclude": ["public", "node_modules"]
}